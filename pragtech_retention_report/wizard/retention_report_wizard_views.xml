<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="retention_report_wizard_view_form" model="ir.ui.view">
        <field name="model">retention.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>

                <group>
                    <group>
                        <field name="report_type"/>
                    </group>
                </group>
                <footer>
                    <button type="object" string="Generate File" class="btn btn-primary" name="download_retention_report"/>
                    <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="retention_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Retentions Files</field>
        <field name="res_model">retention.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Generate Retentions Files" parent="account.menu_finance_reports" id="menu_action_retention_report" action="retention_report_wizard_action"/>
</odoo>