<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_retention">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header"/>

        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>

        <div class="footer">
            <div class="text-center bg-light" style="border-top: 1px solid black;">
                <span>Este comprobante se emite según lo establecido en el Artículo N°16 de la Providencia Administrativa SNAT/2015/0049 de fecha 14/07/2015 publicada en Gaceta Oficial N°4</span>
            </div>
        </div>
    </template>

    <template id="external_layout_retention_2">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header"/>

        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>

        <div class="footer"/>
    </template>

    <template id="external_layout_retention_islr">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-12">
                    <table style="border:1px solid;width:100%">
                        <tr>
                            <td style="width:15%;">
                                <div style="width:130px;height:130px;border:1px solid;margin:5px;overflow:hidden;">
                                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 100%;" alt="Logo"/>
                                </div>
                            </td>
                            <td style="width:20%;" class="text-left">
                                <div t-field="company.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                            </td>
                            <td style="margin-left:30px;width:50%">
                                <p>I.S.L.R. - COMPROBANTE DE RETENCIÓN DE I.S.L.R.</p>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>

        <div class="footer"/>
    </template>
</odoo>